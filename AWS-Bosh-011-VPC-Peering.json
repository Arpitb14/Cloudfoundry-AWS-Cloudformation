{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "VPC Peering",

  "Parameters": {
    "DeploymentName": {
      "Type": "String",
      "Description": "Deployment Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]$",
      "ConstraintDescription": "Must be a valid domain label matching /^([A-Za-z0-9]+[A-Za-z0-9-])+[A-Za-z0-9]$/"
    },
    "Peer1VpcId": {
      "Type": "String",
      "Default": "NONE",
      "Description": "VPC Peer ID 1",
      "AllowedPattern": "^(vpc-[a-f0-9]{8}|NONE)$",
      "ConstraintDescription": "Valid VPC ID or NONE"
    },
    "Peer2VpcId": {
      "Type": "String",
      "Default": "NONE",
      "Description": "VPC Peer ID 2",
      "AllowedPattern": "^(vpc-[a-f0-9]{8}|NONE)$",
      "ConstraintDescription": "Valid VPC ID or NONE"
    },
    "Peer3VpcId": {
      "Type": "String",
      "Default": "NONE",
      "Description": "VPC Peer ID 3",
      "AllowedPattern": "^(vpc-[a-f0-9]{8}|NONE)$",
      "ConstraintDescription": "Valid VPC ID or NONE"
    },
    "Peer1OwnerId": {
      "Type": "String",
      "Default": "NONE",
      "Description": "Peer 1 Owner Account Id",
      "AllowedPattern": "^([0-9]+|NONE)$",
      "ConstraintDescription": "Peer Owner Id or NONE"
    },
    "Peer2OwnerId": {
      "Type": "String",
      "Default": "NONE",
      "Description": "Peer 2 Owner Account Id",
      "AllowedPattern": "^([0-9]+|NONE)$",
      "ConstraintDescription": "Valid CIDR or NONE"
    },
    "Peer3OwnerId": {
      "Type": "String",
      "Default": "NONE",
      "Description": "Peer 3 Owner Account Id",
      "AllowedPattern": "^([0-9]+|NONE)$",
      "ConstraintDescription": "Valid CIDR or NONE"
    },
    "Peer1RoleArn": {
      "Type": "String",
      "Default": "NONE",
      "Description": "Peer 1 Role ARN",
      "AllowedPattern": "^(arn:aws::iam::[0-9]+:*/[0-9]+:[A-Za-z0-9-]+|NONE)$",
      "ConstraintDescription": "Peer 1 ARN or NONE"
    },
    "Peer2RoleArn": {
      "Type": "String",
      "Default": "NONE",
      "Description": "Peer 2 Role ARN",
      "AllowedPattern": "^(arn:aws::iam::[0-9]+:*/[0-9]+:[A-Za-z0-9-]+|NONE)$",
      "ConstraintDescription": "Peer 2 ARN or NONE"
    },
    "Peer3RoleArn": {
      "Type": "String",
      "Default": "NONE",
      "Description": "Peer 3 Role ARN",
      "AllowedPattern": "^(arn:aws::iam::[0-9]+:*/[0-9]+:[A-Za-z0-9-]+|NONE)$",
      "ConstraintDescription": "Peer 3 ARN or NONE"
    },
    "Peer1VpcCidr": {
      "Type": "String",
      "Default": "NONE",
      "Description": "VPC Peer CIDR 1",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}|NONE)$",
      "ConstraintDescription": "Valid CIDR or NONE"
    },
    "Peer2VpcCidr": {
      "Type": "String",
      "Default": "NONE",
      "Description": "VPC Peer CIDR 2",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}|NONE)$",
      "ConstraintDescription": "Valid CIDR or NONE"
    },
    "Peer3VpcCidr": {
      "Type": "String",
      "Default": "NONE",
      "Description": "VPC Peer CIDR 3",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}|NONE)$",
      "ConstraintDescription": "Valid CIDR or NONE"
    },
    "MultiAz": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy multiple AZs",
      "AllowedValues": [ "true", "false" ]
    }
  },

  "Outputs": {},

  "Conditions": {
    "Peer1Vpc": {
      "Fn::And": [
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer1VpcId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer1OwnerId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer1RoleArn" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer1VpcCidr" }, "127.0.0.1" ] } ] }
      ]
    },
    "Peer2Vpc": {
      "Fn::And": [
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer2VpcId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer2OwnerId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer2RoleArn" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer2VpcCidr" }, "127.0.0.1" ] } ] }
      ]
    },
    "Peer3Vpc": {
      "Fn::And": [
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer3VpcId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer3OwnerId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer3RoleArn" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer3VpcCidr" }, "127.0.0.1" ] } ] }
      ]
    },
    "MultiAzAndPeer1Vpc": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer1VpcId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer1VpcCidr" }, "127.0.0.1" ] } ] }
      ]
    },
    "MultiAzAndPeer2Vpc": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer2VpcId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer2VpcCidr" }, "127.0.0.1" ] } ] }
      ]
    },
    "MultiAzAndPeer3Vpc": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer3VpcId" }, "NONE" ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "Peer3VpcCidr" }, "127.0.0.1" ] } ] }
      ]
    }
  },

  "Resources": {
    "StackProtection": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "StackArn": { "Ref": "AWS::StackId" },
          "StackProtectionGroup": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-StackProtectionGroup" } },
          "StackDeleteAllowDeny": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-StackDeleteAllowDeny" } },
          "StackUpdateAllowDeny": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-StackUpdateAllowDeny" } }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/", [
              {
                "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-preamble-TemplatesBucketHttpUrl" }
              },
              "Templates",
              "Stack-Protection.json"
            ]
          ]
        }
      }
    },

    "VpcPeer1": {
      "Type" : "AWS::EC2::VPCPeeringConnection",
      "Condition": "Peer1Vpc",
      "Properties" : {
        "PeerVpcId" : { "Ref": "Peer1VpcId" },
        "PeerOwnerId": { "Ref": "Peer1OwnerId" },
        "PeerRoleArn": { "Ref": "Peer1RoleArn" },
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:VpcPeer1" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "VpcPeer2": {
      "Type" : "AWS::EC2::VPCPeeringConnection",
      "Condition": "Peer2Vpc",
      "Properties" : {
        "PeerVpcId" : { "Ref": "Peer2VpcId" },
        "PeerOwnerId": { "Ref": "Peer2OwnerId" },
        "PeerRoleArn": { "Ref": "Peer2RoleArn" },
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:VpcPeer2" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "VpcPeer3": {
      "Type" : "AWS::EC2::VPCPeeringConnection",
      "Condition": "Peer3Vpc",
      "Properties" : {
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "PeerVpcId" : { "Ref": "Peer3VpcId" },
        "PeerOwnerId": { "Ref": "Peer3OwnerId" },
        "PeerRoleArn": { "Ref": "Peer3RoleArn" },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:VpcPeer3" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "VpcPeer1DmzAz1Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "Peer1Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer1VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz1RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer1VpcId" }
      }
    },
    "VpcPeer1DmzAz2Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer1Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer1VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz2RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer1VpcId" }
      }
    },
    "VpcPeer1PrivateAz1Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "Peer1Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer1VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer1VpcId" }
      }
    },
    "VpcPeer1PrivateAz2Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer1Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer1VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz2RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer1VpcId" }
      }
    },
    "VpcPeer1PrivateAz3Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer1Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer1VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz3RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer1VpcId" }
      }
    },

    "VpcPeer2DmzAz1Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "Peer2Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer2VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz1RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer2VpcId" }
      }
    },
    "VpcPeer2DmzAz2Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer2Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer2VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz2RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer2VpcId" }
      }
    },
    "VpcPeer2PrivateAz1Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "Peer2Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer2VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer2VpcId" }
      }
    },
    "VpcPeer2PrivateAz2Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer2Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer2VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz2RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer2VpcId" }
      }
    },
    "VpcPeer2PrivateAz3Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer2Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer2VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz3RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer1VpcId" }
      }
    },

    "VpcPeer3DmzAz1Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "Peer3Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer3VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz1RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer3VpcId" }
      }
    },
    "VpcPeer3DmzAz2Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer3Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer3VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz2RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer3VpcId" }
      }
    },
    "VpcPeer3PrivateAz1Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "Peer3Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer3VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer3VpcId" }
      }
    },
    "VpcPeer3PrivateAz2Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer3Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer3VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz2RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer3VpcId" }
      }
    },
    "VpcPeer3PrivateAz3Route": {
      "Type": "AWS::EC2::Route",
      "Condition": "MultiAzAndPeer3Vpc",
      "Properties": {
        "DestinationCidrBlock" : { "Ref": "Peer3VpcCidr" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz3RouteTable" } },
        "VpcPeeringConnectionId" : { "Ref": "Peer1VpcId" }
      }
    }
  }
}
