{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Private Subnets",

  "Parameters": {
    "DeploymentName": {
      "Type": "String",
      "Default": "v2",
      "Description": "Deployment Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]$",
      "ConstraintDescription": "Must be a valid domain label matching /^([A-Za-z0-9]+[A-Za-z0-9-])+[A-Za-z0-9]$/"
    },

    "PrivateAz1Cidr": {
      "Type": "String",
      "Default": "10.0.40.0/24",
      "Description": "Private aZ1 CIDR",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
      "ConstraintDescription": "Valid CIDR"
    },
    "PrivateAz2Cidr": {
      "Type": "String",
      "Default": "10.0.41.0/24",
      "Description": "Private AZ2 CIDR",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
      "ConstraintDescription": "Valid CIDR"
    },
    "PrivateAz3Cidr": {
      "Type": "String",
      "Default": "10.0.42.0/24",
      "Description": "Private AZ3 CIDR",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
      "ConstraintDescription": "Valid CIDR"
    },

    "StackProtectionGroup": {
      "Type": "String",
      "MinLength": "1",
      "MaxLength": "128",
      "Description": "Stack protection group",
      "Default": "NONE",
      "AllowedPattern": "^[A-Za-z0-9-]+$",
      "ConstraintDescription": "Can valid group name"
    },
    "StackDeleteAllowDeny": {
      "Type": "String",
      "Default": "Deny",
      "Description": "Deletion Policy Allow/Deny",
      "AllowedValues": [ "Allow", "Deny" ]
    },
    "StackUpdateAllowDeny": {
      "Type": "String",
      "Default": "Deny",
      "Description": "Update Policy Allow/Deny",
      "AllowedValues": [ "Allow", "Deny" ]
    }
  },

  "Outputs": {
    "AwsAvailabilityZone1": {
      "Description": "AWS Availability Zone 1",
      "Value": { "Fn::Select": [ { "Ref": "AwsAvailabilityZone1" }, { "Fn::GetAZs": "AWS::Region" } ] }
    },
    "AwsAvailabilityZone2": {
      "Description": "AWS Availability Zone 2",
      "Value": { "Fn::Select": [ { "Ref": "AwsAvailabilityZone2" }, { "Fn::GetAZs": "AWS::Region" } ] }
    },
    "AwsAvailabilityZone3": {
      "Description": "AWS Availability Zone 3",
      "Value": { "Fn::Select": [ { "Ref": "AwsAvailabilityZone3" }, { "Fn::GetAZs": "AWS::Region" } ] }
    },
    "PrivateAz1Subnet": {
      "Description": "Private AZ1 Subnet",
      "Value": { "Ref": "PrivateAz1Subnet" },
      "Export": { "Name": { "Fn:Sub": "${DeploymentName}-PrivateAz1Subnet" } }
    },
    "PrivateAz2Subnet": {
      "Description": "Private AZ2 Subnet",
      "Condition": "MultiAz",
      "Value": { "Ref": "PrivateAz2Subnet" },
      "Export": { "Name": { "Fn:Sub": "${DeploymentName}-PrivateAz2Subnet" } }
    },
    "PrivateAz3Subnet": {
      "Description": "Private AZ3 Subnet",
      "Condition": "MultiAz",
      "Value": { "Ref": "PrivateAz3Subnet" },
      "Export": { "Name": { "Fn:Sub": "${DeploymentName}-PrivateAz3Subnet" } }
    },
    "PrivateAz1Cidr": {
      "Description": "Private AZ1 Cidr",
      "Value": { "Ref": "PrivateAz1Cidr" },
      "Export": { "Name": { "Fn:Sub": "${DeploymentName}-PrivateAz1Cidr" } }
    },
    "PrivateAz2Cidr": {
      "Description": "Private AZ2 Cidr",
      "Condition": "MultiAz",
      "Value": { "Ref": "PrivateAz2Cidr" },
      "Export": { "Name": { "Fn:Sub": "${DeploymentName}-PrivateAz2Cidr" } }
    },
    "PrivateAz3Cidr": {
      "Description": "Private AZ3 Cidr",
      "Condition": "MultiAz",
      "Value": { "Ref": "PrivateAz3Cidr" },
      "Export": { "Name": { "Fn:Sub": "${DeploymentName}-PrivateAz3Cidr" } }
    },
    "PrivateAz1CidrPrefix": {
      "Description": "Private AZ1 CIDR Prefix",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "PrivateAz1Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "PrivateAz1Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "PrivateAz1Cidr" } ] } ] }
          ]
        ]
      }
    },
    "PrivateAz2CidrPrefix": {
      "Description": "Private AZ2 CIDR Prefix",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "PrivateAz2Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "PrivateAz2Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "PrivateAz2Cidr" } ] } ] }
          ]
        ]
      }
    },
    "PrivateAz3CidrPrefix": {
      "Description": "Private AZ3 CIDR",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "PrivateAz3Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "PrivateAz3Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "PrivateAz3Cidr" } ] } ] }
          ]
        ]
      }
    },
    "PrivateSecurityGroup": {
      "Description": "Private Security Groups",
      "Value": { "Ref": "PrivateSecurityGroup" },
      "Export": { "Name": { "Fn:Sub": "${DeploymentName}-PrivateSecurityGroup" } }
    }
  },

  "Conditions": {
    "StackProtection": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "StackProtectionGroup" }, "NONE" ] } ] },
    "MultiAz": { "Fn::Equals": [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-MultiAz" } }, "true" ] },
    "SingleAz": { "Fn::Equals": [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-MultiAz" } }, "false" ] }
  },

  "Resources": {
    "PrivateAz1Subnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AvailabilityZone1" } },
        "CidrBlock": { "Ref": "PrivateAz1Cidr" },
        "MapPublicIpOnLaunch": false,
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:PrivateAz1Subnet" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "PrivateAz2Subnet": {
      "Type": "AWS::EC2::Subnet",
      "Condition": "MultiAz",
      "Properties": {
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AvailabilityZone2" } },
        "CidrBlock": { "Ref": "PrivateAz2Cidr" },
        "MapPublicIpOnLaunch": false,
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:PrivateAz2Subnet" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "PrivateAz3Subnet": {
      "Type": "AWS::EC2::Subnet",
      "Condition": "MultiAz",
      "Properties": {
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AvailabilityZone3" } },
        "CidrBlock": { "Ref": "PrivateAz3Cidr" },
        "MapPublicIpOnLaunch": false,
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:PrivateAz3Subnet" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "PrivateAz1SubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": { "Ref": "PrivateAz1Subnet" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1RouteTable" } }
      }
    },
    "PrivateAz2SubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Condition": "MultiAz",
      "Properties": {
        "SubnetId": { "Ref": "PrivateAz2Subnet" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz2RouteTable" } }
      }
    },
    "PrivateAz3SubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Condition": "MultiAz",
      "Properties": {
        "SubnetId": { "Ref": "PrivateAz3Subnet" },
        "RouteTableId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz3RouteTable" } }
      }
    },

    "PrivateSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Private In Out",
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:PrivateSecurityGroup" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    }
  }
}
