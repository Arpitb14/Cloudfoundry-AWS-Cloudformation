{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation Bosh - Firewall whitelist template",

  "Parameters": {
    "WhitelistName": {
      "Type": "String",
      "Description": "Whitelist name",
      "AllowedPattern": "^[A-Za-z0-9:-]+$",
      "ConstraintDescription": "Alphanumeric, colon and hypen"
    },

    "WhitelistedCidr": {
      "Type": "String",
      "Default": "127.0.0.1/32",
      "Description": "CIDR to whitelist",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
      "ConstraintDescription": "Valid CIDR"
    },

    "AllowCfSshAccess": {
      "Type": "String",
      "Default": "false",
      "Description": "Allow CF SSH access (true/false)",
      "AllowedValues": [ "true", "false" ]
    },
    "AllowDirectorAccess": {
      "Type": "String",
      "Default": "false",
      "Description": "Allow Director access (true/false)",
      "AllowedValues": [ "true", "false" ]
    },

    "VpcId": {
      "Type": "AWS::EC2::VPC::Id",
      "Description": "VPC ID",
      "ConstraintDescription": "Valid VPC ID"
    }
  },

  "Outputs": {
    "DirectorSecurityGroup": {
      "Description": "Director Security Group",
      "Value": { "Ref": "DirectorSecurityGroup" }
    },
    "LbSecurityGroup": {
      "Description": "Load Balancer Security Group",
      "Value": { "Ref": "LbSecurityGroup" }
    }
  },

 "Conditions": {
    "AllowCfSshAccess": { "Fn::Equals": [ { "Ref": "AllowCfSshAccess" }, "true" ] },
    "AllowDirectorAccess": { "Fn::Equals": [ { "Ref": "AllowDirectorAccess" }, "true" ] }
  },

  "Resources": {
    "DirectorSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Condition": "AllowDirectorAccess",
      "Properties": {
        "GroupDescription": "Private In Out",
        "VpcId": { "Ref": "VpcId" },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                ":", [
                  { "Ref": "WhitelistName" },
                  "DirectorSecurityGroup"
                ]
              ]
            }
          }
        ],
        "SecurityGroupEgress": [
          {
            "CidrIp": "0.0.0.0/0",
            "FromPort": "0",
            "ToPort": "65535",
            "IpProtocol": "-1"
          }
        ],
        "SecurityGroupIngress": [
          {
            "CidrIp": { "Ref": "WhitelistedCidr" },
            "FromPort": "22",
            "ToPort": "22" ,
            "IpProtocol": "tcp"
          },
          {
            "CidrIp": { "Ref": "WhitelistedCidr" },
            "FromPort": "6868",
            "ToPort": "6868" ,
            "IpProtocol": "tcp"
          },
          {
            "CidrIp": { "Ref": "WhitelistedCidr" },
            "FromPort": "25555",
            "ToPort": "25555" ,
            "IpProtocol": "tcp"
          }
        ]
      }
    },
    "LbSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Load Balancer Access In Out",
        "VpcId": { "Ref": "VpcId" },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                ":", [
                  { "Ref": "WhitelistName" },
                  "LbSecurityGroup"
                ]
              ]
            }
          }
        ],
        "SecurityGroupEgress": [
          {
            "CidrIp": "0.0.0.0/0",
            "FromPort": "0",
            "ToPort": "65535",
            "IpProtocol": "-1"
          }
        ],
        "SecurityGroupIngress": [
          {
            "CidrIp": { "Ref": "WhitelistedCidr" },
            "FromPort": "80",
            "ToPort": "80" ,
            "IpProtocol": "tcp"
          },
          {
            "CidrIp": { "Ref": "WhitelistedCidr" },
            "FromPort": "443",
            "ToPort": "443" ,
            "IpProtocol": "tcp"
          }
        ]
      }
    },

    "CfSshAccessIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "AllowCfSshAccess",
      "Properties": {
        "GroupId": { "Ref": "LbSecurityGroup" },
        "CidrIp": { "Ref": "WhitelistedCidr" },
        "FromPort": "2222",
        "ToPort": "2222" ,
        "IpProtocol": "tcp"
      }
    }
  }
}

