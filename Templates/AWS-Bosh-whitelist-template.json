{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation Bosh - Firewall whitelist template",

  "Parameters": {
    "WhitelistName": {
      "Type": "String",
      "Description": "Whitelist name",
      "AllowedPattern": "^[A-Za-z0-9:-]+$",
      "ConstraintDescription": "Alphanumeric, colon and hypen"
    },

    "WhitelistedCidr": {
      "Type": "String",
      "Default": "127.0.0.1/32",
      "Description": "CIDR to whitelist",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
      "ConstraintDescription": "Valid CIDR"
    },
    "DirectorSecurityGroup": {
      "Type": "String",
      "Description": "Director Security Group",
      "AllowedPattern": "^sg-[0-9a-f]{8}$",
      "ConstraintDescription": "Valid security group"
    },
    "LbSecurityGroup": {
      "Type": "String",
      "Description": "LB Security Group",
      "AllowedPattern": "^sg-[0-9a-f]{8}$",
      "ConstraintDescription": "Valid security group"
    },

    "AllowCfSshAccess": {
      "Type": "String",
      "Default": "false",
      "Description": "Allow CF SSH access (true/false)",
      "AllowedValues": [ "true", "false" ]
    },
    "AllowDirectorAccess": {
      "Type": "String",
      "Default": "false",
      "Description": "Allow Director access (true/false)",
      "AllowedValues": [ "true", "false" ]
    }
  },

 "Conditions": {
    "AllowCfSshAccess": { "Fn::Equals": [ { "Ref": "AllowCfSshAccess" }, "true" ] },
    "AllowDirectorAccess": { "Fn::Equals": [ { "Ref": "AllowDirectorAccess" }, "true" ] }
  },

  "Resources": {
    "Director22AccessIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "AllowDirectorAccess",
      "Properties": {
        "GroupId": { "Ref": "DirectorSecurityGroup" },
        "CidrIp": { "Ref": "WhitelistedCidr" },
        "FromPort": "22",
        "ToPort": "22" ,
        "IpProtocol": "tcp"
      }
    },
    "Director6868AccessIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "AllowDirectorAccess",
      "Properties": {
        "GroupId": { "Ref": "DirectorSecurityGroup" },
        "CidrIp": { "Ref": "WhitelistedCidr" },
        "FromPort": "6868",
        "ToPort": "6868" ,
        "IpProtocol": "tcp"
      }
    },
    "Director25555AccessIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "AllowDirectorAccess",
      "Properties": {
        "GroupId": { "Ref": "DirectorSecurityGroup" },
        "CidrIp": { "Ref": "WhitelistedCidr" },
        "FromPort": "25555",
        "ToPort": "25555" ,
        "IpProtocol": "tcp"
      }
    },

    "Lb22AccessIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "AllowCfSshAccess",
      "Properties": {
        "GroupId": { "Ref": "LbSecurityGroup" },
        "CidrIp": { "Ref": "WhitelistedCidr" },
        "FromPort": "2222",
        "ToPort": "2222" ,
        "IpProtocol": "tcp"
      }
    },
    "Lb80AccessIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "GroupId": { "Ref": "LbSecurityGroup" },
        "CidrIp": { "Ref": "WhitelistedCidr" },
        "FromPort": "80",
        "ToPort": "80" ,
        "IpProtocol": "tcp"
      }
    },
    "Lb443AccessIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "GroupId": { "Ref": "LbSecurityGroup" },
        "CidrIp": { "Ref": "WhitelistedCidr" },
        "FromPort": "443",
        "ToPort": "443" ,
        "IpProtocol": "tcp"
      }
    }
  }
}

