{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Elastic Load Balancers: Director, CF SSH & HTTP/HTTPS",

  "Parameters": {
    "DeploymentName": {
      "Type": "String",
      "Description": "Deployment Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]$",
      "ConstraintDescription": "Must be a valid domain label matching /^([A-Za-z0-9]+[A-Za-z0-9-])+[A-Za-z0-9]$/"
    },

    "ApplicationElbTimeout": {
      "Type": "Number",
      "Default": "30",
      "Description": "Application ELB Timeout",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "ApplicationElbHealthCheckInternal": {
      "Type": "Number",
      "Default": "40",
      "Description": "Application ELB Health Check Interval",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "ApplicationElbHealthCheckTimeout": {
      "Type": "Number",
      "Default": "20",
      "Description": "Application ELB Health Check Timeout",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "ApplicationElbScheme": {
      "Type": "String",
      "Default": "internet-facing",
      "Description": "Application ELB: Internet facing or internal load balancer",
      "AllowedValues": [ "internet-facing", "internal" ]
    },
    "CfSshElbTimeout": {
      "Type": "Number",
      "Default": "30",
      "Description": "CF SSH ELB Timeout",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "CfSshElbHealthCheckInternal": {
      "Type": "Number",
      "Default": "40",
      "Description": "CF SSH ELB Health Check Interval",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "CfSshElbHealthCheckTimeout": {
      "Type": "Number",
      "Default": "20",
      "Description": "CF SSH ELB Health Check Timeout",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "CfSshElbScheme": {
      "Type": "String",
      "Default": "internet-facing",
      "Description": "CF SSH ELB: Internet facing or internal load balancer",
      "AllowedValues": [ "internet-facing", "internal" ]
    },
    "DirectorElbTimeout": {
      "Type": "Number",
      "Default": "30",
      "Description": "Director ELB Timeout",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "DirectorElbHealthCheckInternal": {
      "Type": "Number",
      "Default": "40",
      "Description": "Director ELB Health Check Interval",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "DirectorElbHealthCheckTimeout": {
      "Type": "Number",
      "Default": "20",
      "Description": "Director ELB Health Check Timeout",
      "MinValue": "1",
      "MaxValue": "999"
    },
    "DirectorElbScheme": {
      "Type": "String",
      "Default": "internet-facing",
      "Description": "Director ELB: Internet facing or internal load balancer",
      "AllowedValues": [ "internet-facing", "internal" ]
    },

    "GenerateApplicationSslCertificate": {
      "Type": "String",
      "Default": "true",
      "Description": "Generate Application AWS SSL certificate - requires manual intervention to validate request email",
      "AllowedValues": [ "true", "false" ]
    },
    "ExistingApplicationSslCertificate": {
      "Type": "String",
      "Default": "",
      "Description": "Existing Application SSL certificate ARN",
      "AllowedPattern": "^(arn:aws::iam::[0-9]+:server-certificate/[0-9]+:[A-Za-z0-9-]+)?$",
      "ConstraintDescription": "AWS ACM SSL certificate ARN or empty"
    },

    "SslValidationDomain": {
      "Type": "String",
      "Default": "",
      "Description": "Domain to send the SSL validation emails to. Should be empty, or a the parent domain of HostedZone",
      "AllowedPattern": "^((([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]\\.)+[A-Za-z0-9]{2,})?$",
      "ConstraintDescription": "Must be a valid domain name matching /^(([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]\\.)+([A-Za-z0-9]{2,}$/ or empty"
    },

    "MultiAz": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy multiple AZs",
      "AllowedValues": [ "true", "false" ]
    },
    "DeployElb": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy External ELB",
      "AllowedValues": [ "true", "false" ]
    }
  },

  "Outputs": {
    "ApplicationElb": {
      "Description": "Application ELB",
      "Condition": "DeployElb",
      "Value": { "Ref": "ApplicationElb" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-ApplicationElb" } }
    },
    "ApplicationElbDnsName": {
      "Description": "Application ELB DNS Name",
      "Condition": "DeployElb",
      "Value": { "Fn::GetAtt": [ "ApplicationElb","DNSName" ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-ApplicationElbDnsName" } }
    },
    "ApplicationElbTargetGroup80": {
      "Description": "Application ELB Target Group Port 80",
      "Condition": "DeployElb",
      "Value": { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Fn::GetAtt": [ "ApplicationElbTargetGroup80", "TargetGroupFullName" ] } ] } ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-ApplicationElbTargetGroup80" } }
    },
    "ApplicationElbTargetGroup443": {
      "Description": "Application ELB Target Group Port 443",
      "Condition": "ApplicationSslElb",
      "Value": { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Fn::GetAtt": [ "ApplicationElbTargetGroup443", "TargetGroupFullName" ] } ] } ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-ApplicationElbTargetGroup443" } }
    },
    "ApplicationElbTargetGroup80Arn": {
      "Description": "Application ELB Target Group Port 80 ARN",
      "Condition": "DeployElb",
      "Value": { "Ref": "ApplicationElbTargetGroup80" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-ApplicationElbTargetGroup80Arn" } }
    },
    "ApplicationElbTargetGroup443Arn": {
      "Description": "Application ELB Target Group Port 443 ARN",
      "Condition": "DeployElb",
      "Value": { "Ref": "ApplicationElbTargetGroup443" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-ApplicationElbTargetGroup443Arn" } }
    },

    "CfSshElb": {
      "Description": "CF SSH ELB",
      "Condition": "DeployElb",
      "Value": { "Ref": "CfSshElb" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-CfSshElb" } }
    },
    "CfSshElbDnsName": {
      "Description": "CF SSH ELB DNS Name",
      "Condition": "DeployElb",
      "Value": { "Fn::GetAtt": [ "CfSshElb","DNSName" ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-CfSshElbDnsName" } }
    },
    "CfSshElbTargetGroup2222": {
      "Description": "CF SSH ELB Target Group Port 2222",
      "Condition": "DeployElb",
      "Value": { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Fn::GetAtt": [ "CfSshElbTargetGroup2222", "TargetGroupFullName" ] } ] } ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-CfSshElbTargetGroup2222" } }
    },
    "CfSshElbTargetGroup2222Arn": {
      "Description": "CF SSH ELB Target Group Port 2222 ARN",
      "Condition": "DeployElb",
      "Value": { "Ref": "CfSshElbTargetGroup2222" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-CfSshElbTargetGroup2222Arn" } }
    },

    "DirectorElb": {
      "Description": "Director ELB",
      "Condition": "DeployElb",
      "Value": { "Ref": "DirectorElb" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DirectorElb" } }
    },
    "DirectorElbDnsName": {
      "Description": "Director ELB DNS Name",
      "Condition": "DeployElb",
      "Value": { "Fn::GetAtt": [ "DirectorElb","DNSName" ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DirectorElbDnsName" } }
    },
    "DirectorElbTargetGroup22": {
      "Description": "Director ELB Target Group Port 22",
      "Condition": "DeployElb",
      "Value": { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Fn::GetAtt": [ "DirectorElbTargetGroup22", "TargetGroupFullName" ] } ] } ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup22" } }
    },
    "DirectorElbTargetGroup6868": {
      "Description": "Director ELB Target Group Port 6868",
      "Condition": "DeployElb",
      "Value": { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Fn::GetAtt": [ "DirectorElbTargetGroup6868", "TargetGroupFullName" ] } ] } ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup6868" } }
    },
    "DirectorElbTargetGroup25555": {
      "Description": "Director ELB Target Group Port 25555",
      "Condition": "DeployElb",
      "Value": { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Fn::GetAtt": [ "DirectorElbTargetGroup25555", "TargetGroupFullName" ] } ] } ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup25555" } }
    },
    "DirectorElbTargetGroup22Arn": {
      "Description": "Director ELB Target Group Port 22 ARN",
      "Condition": "DeployElb",
      "Value": { "Ref": "DirectorElbTargetGroup22" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup22Arn" } }
    },
    "DirectorElbTargetGroup6868Arn": {
      "Description": "Director ELB Target Group Port 6868 ARN",
      "Condition": "DeployElb",
      "Value": { "Ref": "DirectorElbTargetGroup6868" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup6868Arn" } }
    },
    "DirectorElbTargetGroup25555Arn": {
      "Description": "Director ELB Target Group Port 25555 ARN",
      "Condition": "DeployElb",
      "Value": { "Ref": "DirectorElbTargetGroup25555" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup25555Arn" } }
    }
  },

  "Conditions": {
    "DeployElb": { "Fn::Equals": [ { "Ref": "DeployElb" }, "true" ] },

    "GenerateApplicationSslCertificate": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "DeployElb" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "GenerateApplicationSslCertificate" }, "true" ] },
	{ "Fn::Equals": [ { "Ref": "ExistingApplicationSslCertificate" }, "" ] }
      ]
    },

    "ApplicationSslElb": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "DeployElb" }, "true" ] },
        {
          "Fn::Or": [
            { "Fn::Equals": [ { "Ref": "GenerateApplicationSslCertificate" }, "true" ] },
            { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExistingApplicationSslCertificate" }, "" ] } ] }
          ]
        }
      ]
    },
    "ApplicationPlainTextElb": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "DeployElb" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "GenerateApplicationSslCertificate" }, "false" ] },
        { "Fn::Equals": [ { "Ref": "ExistingApplicationSslCertificate" }, "" ] }
      ]
    },

    "UseHostedZone": { "Fn::Equals": [ { "Ref": "SslValidationDomain" }, "" ] },
    "MultiAz": { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] }
  },

  "Resources": {
    "GeneratedApplicationSslCertificate": {
      "Type": "AWS::CertificateManager::Certificate",
      "Condition": "GenerateApplicationSslCertificate",
      "Properties": {
        "DomainName": { "Fn::Join": [ ".", [ "*.apps", { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } } ] ] },
        "SubjectAlternativeNames": [ { "Fn::Join": [ ".", [ "*.system", { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } } ] ] } ],
        "DomainValidationOptions": [
          {
            "DomainName": { "Fn::Join": [ ".", [ "*.apps", { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } } ] ] },
            "ValidationDomain": { "Fn::If": [ "UseHostedZone", { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } }, { "Ref": "SslValidationDomain" } ] }
          },
          {
            "DomainName": { "Fn::Join": [ ".", [ "*.system", { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } } ] ] },
            "ValidationDomain": { "Fn::If": [ "UseHostedZone", { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } }, { "Ref": "SslValidationDomain" } ] }
          }
        ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:GeneratedApplicationSslCertificate" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "ApplicationElb": {
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
      "Condition": "DeployElb",
      "Properties": {
        "Scheme": { "Ref": "ApplicationElbScheme" },
        "Subnets": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz1Subnet" } },
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz2Subnet" } }
        ],
        "LoadBalancerAttributes": [
          { "Key": "idle_timeout.timeout_seconds", "Value": { "Ref": "ApplicationElbTimeout" } }
        ],
        "SecurityGroups": [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-LbSecurityGroup" } } ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:ApplicationElb" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "CfSshElb": {
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
      "Condition": "DeployElb",
      "Properties": {
        "Scheme": { "Ref": "CfSshElbScheme" },
        "Subnets": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz1Subnet" } },
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz2Subnet" } }
        ],
        "LoadBalancerAttributes": [
          { "Key": "idle_timeout.timeout_seconds", "Value": { "Ref": "CfSshElbTimeout" } }
        ],
        "SecurityGroups": [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CfSshElbSecurityGroup" } } ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:CfSshElb" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "DirectorElb": {
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
      "Condition": "DeployElb",
      "Properties": {
        "Scheme": { "Ref": "DirectorElbScheme" },
        "Subnets": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz1Subnet" } },
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DmzAz2Subnet" } }
        ],
        "LoadBalancerAttributes": [
          { "Key": "idle_timeout.timeout_seconds", "Value": { "Ref": "DirectorElbTimeout" } }
        ],
        "SecurityGroups": [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorElbSecurityGroup" } } ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DirectorElb" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "ApplicationElbListener80": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          { "Type": "forward", "TargetGroupArn": { "Ref": "ApplicationElbTargetGroup80" } }
        ],
        "LoadBalancerArn": { "Ref": "ApplicationElb" },
        "Port": "80",
        "Protocol": "HTTP"
      }
    },
    "ApplicationElbListener443": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Condition": "ApplicationSslElb",
      "Properties": {
        "Certificates": [
          {
            "CertificateArn": {
              "Fn::If": [
                "GenerateApplicationSslCertificate",
                { "Ref": "GeneratedApplicationSslCertificate" },
                { "Ref": "ExistingApplicationSslCertificate" }
              ]
            }
          }
        ],
        "DefaultActions": [
          { "Type": "forward", "TargetGroupArn": { "Ref": "ApplicationElbTargetGroup443" } }
        ],
        "LoadBalancerArn": { "Ref": "ApplicationElb" },
        "Port": "443",
        "Protocol": "HTTPS"
      }
    },
    "CfSshElbListener2222": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          { "Type": "forward", "TargetGroupArn": { "Ref": "CfSshElbTargetGroup2222" } }
        ],
        "LoadBalancerArn": { "Ref": "CfSshElb" },
        "Port": "2222",
        "Protocol": "TCP"
      }
    },
    "DirectorElbListener22": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          { "Type": "forward", "TargetGroupArn": { "Ref": "DirectorElbTargetGroup22" } }
        ],
        "LoadBalancerArn": { "Ref": "DirectorElb" },
        "Port": "22",
        "Protocol": "TCP"
      }
    },
    "DirectorElbListener6868": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          { "Type": "forward", "TargetGroupArn": { "Ref": "DirectorElbTargetGroup6868" } }
        ],
        "LoadBalancerArn": { "Ref": "DirectorElb" },
        "Port": "6868",
        "Protocol": "TCP"
      }
    },
    "DirectorElbListener25555": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          { "Type": "forward", "TargetGroupArn": { "Ref": "DirectorElbTargetGroup25555" } }
        ],
        "LoadBalancerArn": { "Ref": "DirectorElb" },
        "Port": "25555",
        "Protocol": "TCP"
      }
    },



    "ApplicationElbTargetGroup80": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Condition": "DeployElb",
      "Properties": {
        "Port": "80",
        "Protocol": "HTTP",
        "HealthCheckIntervalSeconds": { "Ref": "ApplicationElbHealthCheckInternal" },
        "HealthCheckPath": "/health",
        "HealthCheckPort": "8080",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": { "Ref": "ApplicationElbHealthCheckTimeout" },
        "Targets": [],
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:ApplicationElbTargetGroup80" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "ApplicationElbTargetGroup443": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Condition": "DeployElb",
      "Properties": {
        "Port": "443",
        "Protocol":"HTTPS",
        "HealthCheckIntervalSeconds": { "Ref": "ApplicationElbHealthCheckInternal" },
        "HealthCheckPath": "/health",
        "HealthCheckPort": "8080",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": { "Ref": "ApplicationElbHealthCheckTimeout" },
        "Targets": [],
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:ApplicationElbTargetGroup443" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "CfSshElbTargetGroup2222": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Condition": "DeployElb",
      "Properties": {
        "Port": "2222",
        "Protocol": "HTTP",
        "HealthCheckIntervalSeconds": { "Ref": "CfSshElbHealthCheckInternal" },
        "HealthCheckPath": "/",
        "HealthCheckPort": "2223",
        "HealthCheckProtocol": "HTTP",
        "HealthCheckTimeoutSeconds": { "Ref": "CfSshElbHealthCheckTimeout" },
        "Targets": [],
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:CfSshElbTargetGroup2222" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "DirectorElbTargetGroup22": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Condition": "DeployElb",
      "Properties": {
        "Port": "22",
        "Protocol": "HTTP",
        "HealthCheckIntervalSeconds": { "Ref": "DirectorElbHealthCheckInternal" },
        "HealthCheckPort": "22",
        "HealthCheckProtocol": "TCP",
        "HealthCheckTimeoutSeconds": { "Ref": "DirectorElbHealthCheckTimeout" },
        "Targets": [],
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DirectorElbTargetGroup22" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "DirectorElbTargetGroup6868": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Condition": "DeployElb",
      "Properties": {
        "Port": "6868",
        "Protocol": "TCP",
        "HealthCheckIntervalSeconds": { "Ref": "DirectorElbHealthCheckInternal" },
        "HealthCheckPort": "6868",
        "HealthCheckProtocol": "TCP",
        "HealthCheckTimeoutSeconds": { "Ref": "DirectorElbHealthCheckTimeout" },
        "Targets": [],
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DirectorElbTargetGroup2222" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "DirectorElbTargetGroup25555": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Condition": "DeployElb",
      "Properties": {
        "Port": "25555",
        "Protocol": "TCP",
        "HealthCheckIntervalSeconds": { "Ref": "DirectorElbHealthCheckInternal" },
        "HealthCheckPort": "25555",
        "HealthCheckProtocol": "HTTPS",
        "HealthCheckTimeoutSeconds": { "Ref": "DirectorElbHealthCheckTimeout" },
        "Targets": [],
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DirectorElbTargetGroup25555" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },


    "CfSshElbSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Condition": "DeployElb",
      "Properties": {
        "GroupDescription": "CF SSH ELB Security Group",
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:CfSshElbSecurityGroup" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "CfSshInstanceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Condition": "DeployElb",
      "Properties": {
        "GroupDescription": "CF SSH Instance Security Group",
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:CfSshInstanceSecurityGroup" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "DirectorElbSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Condition": "DeployElb",
      "Properties": {
        "GroupDescription": "Director ELB Security Group",
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DirectorElbSecurityGroup" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ] 
      } 
    }
  }
}
