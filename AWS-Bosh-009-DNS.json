{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Route53 DNS Names",

  "Parameters": {
    "DeploymentName": {
      "Type": "String",
      "Description": "Deployment Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]$",
      "ConstraintDescription": "Must be a valid domain label matching /^([A-Za-z0-9]+[A-Za-z0-9-])+[A-Za-z0-9]$/"
    },
    "MultiAz": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy multiple AZs",
      "AllowedValues": [ "true", "false" ]
    },
    "DeployElb": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy External ELB",
      "AllowedValues": [ "true", "false" ]
    },
    "AllocateLbIp": {
      "Type": "String",
      "Default": "false",
      "Description": "Allocate External IP (eg for HA Proxy)",
      "AllowedValues": [ "true", "false" ]
    },
    "AllocateBoshPublicIp": {
      "Type": "String",
      "Default": "false",
      "Description": "Allocate Public Bosh IP",
      "AllowedValues": [ "true", "false" ]
    }
  },

  "Outputs": {
    "ApiDns": {
      "Description": "API DNS name",
      "Value": {
        "Fn::Join": [
          ".", [
            "api.system",
            { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } }
          ]
        ]
      }
    },
    "DirectorDns": {
      "Description": "Director DNS name",
      "Value": {
        "Fn::Join": [
          ".", [
            "director",
            { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } }
          ]
        ]
      }
    },
    "UaaDns": {
      "Description": "API DNS name",
      "Value": {
        "Fn::Join": [
          ".", [
            "uaa.system",
            { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } }
          ]
        ]
      }
    },
    "NatDns": {
      "Description": "NAT DNS Name",
      "Value": {
        "Fn::Join": [
          ".", [
            "nat",
            { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } }
          ]
        ]
      }
    },
    "NatAz1DnsName": {
      "Description": "NAT AZ1 DNS Name",
      "Value": {
        "Fn::Join": [
          ".", [
            "nat-z1",
            { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } }
          ]
        ]
      }
    },
    "NatAz2DnsName": {
      "Description": "NAT AZ2 DNS Name",
      "Condition": "MultiAz",
      "Value": {
        "Fn::Join": [
          ".", [
            "nat-z2",
            { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } }
          ]
        ]
      }
    },
    "NatAz3DnsName": {
      "Description": "NAT AZ3 DNS Name",
      "Condition": "MultiAz",
      "Value": {
        "Fn::Join": [
          ".", [
            { "Fn::Sub": "nat-z3.${DeploymentName}" },
            { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }
          ]
        ]
      }
    }
  },

  "Conditions": {
    "DeployElb": { "Fn::Equals": [ { "Ref": "DeployElb" }, "true" ] },

    "MultiAz": { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
    "MultiAzAndAllocateLbIp": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "AllocateLbIp" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "DeployElb" }, "false" ] }
      ]
    },
    "SingleAz": { "Fn::Equals": [ { "Ref": "MultiAz" }, "false" ] },
    "SingleAzAndAllocateLbIp": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "false" ] },
        { "Fn::Equals": [ { "Ref": "DeployElb" }, "false" ] }
      ]
    },
    "AllocateBoshIp": { "Fn::Equals": [ { "Ref": "AllocateBoshPublicIp" }, "true" ] }
  },

  "Resources": {
    "AppsExternalElbDnsRr": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "DeployElb",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "*.apps", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "Application ELB DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          "AliasTarget": {
            "DNSName": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ApplicationElbDnsName" } },
            "HostedZoneId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ApplicationElbCanonicalHostedZoneID" } }
          }
        ]
      }
    },

    "AppsExternalSingleIpDnsRR": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "SingleAzAndAllocateLbIp",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "*.apps", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "Applications IP DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ExternalAz1Ip" } }
        ]
      }
    },
    "AppsExternalMultiIpDnsRR": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "MultiAzAndAllocateLbIp",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "*.apps", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "Application DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ExternalAz1Ip" } },
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ExternalAz2Ip" } }
        ]
      }
    },
    "CfSshDnsRr": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "DeployElb",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "ssh.system", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment":"CF SSH ELB DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          "AliasTarget": {
            "DNSName": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CfSshElbCanonicalHostedZoneName" } },
            "HostedZoneId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CfSshElbCanonicalHostedZoneNameID" } }
          }
        ]
      }
    },

    "DirectorDnsARr": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "AllocateBoshIp",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "director", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "Director IP DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BoshLitePublicIp" } } ]
      }
    },
    "DirectorDnsAliasRr": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "DeployElb",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "director", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "Director ELB DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          "AliasTarget": {
            "DNSName": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorElbirectorElbCanonicalHostedZoneName" } },
            "HostedZoneId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorElbCanonicalHostedZoneNameID" } }
          }
        ]
      }
    },

    "NatSingleAzDnsRr": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "SingleAz",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "nat", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "NAT AZ1 DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1Ip" } }
        ]
      }
    },
    "NatMultiAzDnsRr": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "MultiAz",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "nat", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "NAT AZ1-3 DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1Ip" } },
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz2Ip" } },
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz3Ip" } }
        ]
      }
    },
    "NatAz1DnsRr": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "nat-z1", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "NAT AZ1 DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1Ip" } }
        ]
      }
    },
    "NatAz2DnsRr": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "MultiAz",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "nat-z2", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "NAT AZ2 DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz2Ip" } }
        ]
      }
    },
    "NatAz3DnsRr": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "MultiAz",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "nat-z3", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "NAT AZ3 DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz3Ip" } }
        ]
      }
    },
    "SystemExternalDnsRR": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "DeployElb",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "*.system", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "System ELB DNS Name",
        "TTL": "3600",
        "Type": "A",
        "AliasTarget": {
          "DNSName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ApplicationElbDnsName" } }, "." ] ] },
          "HostedZoneId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ApplicationElbCanonicalHostedZoneID" } }
        }
      }
    },
    "SystemExternalSingleAzIpDnsRR": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "SingleAzAndAllocateLbIp",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "*.system", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "System IP DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ExternalAz1Ip" } }
        ]
      }
    },
    "SystemExternalMultiAzIpDnsRR": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "MultiAzAndAllocateLbIp",
      "Properties": {
        "HostedZoneName": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } }, "." ] ] },
        "Name": { "Fn::Join": [ ".", [ "*.system", { "Ref": "DeploymentName" }, { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-HostedZone" } } ] ] },
        "Comment": "System IP DNS Name",
        "TTL": "3600",
        "Type": "A",
        "ResourceRecords": [
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ExternalAz1Ip" } },
          { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ExternalAz2Ip" } }
        ]
      }
    }
  }
}
