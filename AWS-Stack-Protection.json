{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation Stack Protection",

  "Parameters": {
    "StackArn": {
      "Type": "String",
      "Description": "Stack ARN",
      "AllowedPattern": "^arn:aws:[a-z]+-[a-z]+-[0-9]+:[0-9]+:stack/[A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]/[a-f0-9]{8}-([a-f0-9]{4}-){3}[a-f0-9]{12}$/",
      "ConstraintDescription": "Must be a valid stack ARN"
    },
    "DeleteAllowDeny": {
      "Type": "String",
      "Default": "Deny",
      "Description": "Deletion Policy Allow/Deny",
      "AllowedPattern": "^(Allow|Deny)$",
      "ConstraintDescription": "Allow or Deny"
    },
    "UpdateAllowDeny": {
      "Type": "String",
      "Default": "Deny",
      "Description": "Update Policy Allow/Deny",
      "AllowedPattern": "^(Allow|Deny)$",
      "ConstraintDescription": "Allow or Deny"
    }
  },

  "Resources": {
    "PreventStackUpdate": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "PreventStackDeletion",
        "Users": [ "*" ],
        "PolicyDocument": {
          "Version":"2012-10-17",
          "Statement": [
            {
              "Effect": { "Ref": "UpdateAllowDeny" },
              "Action": "Update:*",
              "Resource": "LogicalResourceId/"
            }
          ]
        }
      }
    },
    "PreventStackDeletion": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "PreventStackDeletion",
        "Users": [ "*" ],
        "PolicyDocument": {
          "Version":"2012-10-17",
          "Statement": [
            {
              "Effect": { "Ref": "DeletionAllowDeny" },
              "Action": "Delete:*",
              "Resource": "LogicalResourceId/*"
            }
          ]
        }
      }
    }
  }
}
