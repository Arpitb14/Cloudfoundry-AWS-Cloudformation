{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "DMZ Subnet(s)",

  "Parameters": {
    "DeploymentName": {
      "Type": "String",
      "Description": "Deployment Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]$",
      "ConstraintDescription": "Must be a valid domain label matching /^([A-Za-z0-9]+[A-Za-z0-9-])+[A-Za-z0-9]$/"
    },
    "DmzAz1Cidr": {
      "Type": "String",
      "Default": "10.0.10.0/24",
      "Description": "DMZ AZ1 CIDR - /24 to /27",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/2(4|5|6|7)$",
      "ConstraintDescription": "Valid CIDR - /24 to /27"
    },
    "DmzAz2Cidr": {
      "Type": "String",
      "Default": "10.0.11.0/24",
      "Description": "DMZ AZ2 CIDR - /24 to /27",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/2(4|5|6|7)$",
      "ConstraintDescription": "Valid CIDR - /24 to /27"
    },
    "MultiAz": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy multiple AZs",
      "AllowedValues": [ "true", "false" ]
    },
    "DeployElb": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy External ELB",
      "AllowedValues": [ "true", "false" ]
    }
  },

  "Outputs": {
    "DmzAz1Subnet": {
      "Description": "DMZ AZ1 Subnet",
      "Value": { "Ref": "DmzAz1Subnet" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DmzAz1Subnet" } }
    },
    "DmzAz2Subnet": {
      "Description": "DMZ AZ2 Subnet",
      "Condition": "MultiAzOrElb",
      "Value": { "Ref": "DmzAz2Subnet" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DmzAz2Subnet" } }
    },
    "DmzAz1Cidr": {
      "Description": "DMZ AZ1 CIDR",
      "Value": { "Ref": "DmzAz1Cidr" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DmzAz1Cidr" } }
    },
    "DmzAz2Cidr": {
      "Description": "DMZ AZ2 CIDR",
      "Condition": "MultiAzOrElb",
      "Value": { "Ref": "DmzAz2Cidr" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DmzAz2Cidr" } }
    },
    "DmzAz1CidrPrefix": {
      "Description": "DMZ AZ1 CIDR Prefix",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] }
          ]
        ]
      }
    },
    "DmzAz2CidrPrefix": {
      "Description": "DMZ AZ2 CIDR",
      "Condition": "MultiAzOrElb",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] }
          ]
        ]
      }
    },
    "DmzAz1DefaultRoute": {
      "Description": "DMZ AZ1 Default Route",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            {
              "Fn::FindInMap": [
                "Route4thOctet",
                { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Ref": "DmzAz1Cidr" } ] } ] },
                { "Fn::Select": [ "0", { "Fn::Split": [ "/", { "Fn::Select": [ "3", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] } ] } ] }
              ]
            }
          ]
        ]
      }
    },
    "DmzAz2DefaultRoute": {
      "Description": "DMZ AZ1 Default Route",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            {
              "Fn::FindInMap": [
                "Route4thOctet",
                { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Ref": "DmzAz2Cidr" } ] } ] },
                { "Fn::Select": [ "0", { "Fn::Split": [ "/", { "Fn::Select": [ "3", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] } ] } ] }
              ]
            }
          ]
        ]
      }
    },
    "DmzAz1ReservedStart": {
      "Description": "DMZ AZ1 Reserved Start",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            {
              "Fn::FindInMap": [
                "ReservedStart4thOctet",
                { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Ref": "DmzAz1Cidr" } ] } ] },
                { "Fn::Select": [ "0", { "Fn::Split": [ "/", { "Fn::Select": [ "3", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] } ] } ] }
              ]
            }
          ]
        ]
      }
    },
    "DmzAz2ReservedStart": {
      "Description": "DMZ AZ1 Reserved Start",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            {
              "Fn::FindInMap": [
                "ReservedStart4thOctet",
                { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Ref": "DmzAz2Cidr" } ] } ] },
                { "Fn::Select": [ "0", { "Fn::Split": [ "/", { "Fn::Select": [ "3", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] } ] } ] }
              ]
            }
          ]
        ]
      }
    },
    "DmzAz1ReservedStop": {
      "Description": "DMZ AZ1 Reserved Stop",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            {
              "Fn::FindInMap": [
                "ReservedStop4thOctet",
                { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Ref": "DmzAz1Cidr" } ] } ] },
                { "Fn::Select": [ "0", { "Fn::Split": [ "/", { "Fn::Select": [ "3", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] } ] } ] }
              ]
            }
          ]
        ]
      }
    },
    "DmzAz2ReservedStop": {
      "Description": "DMZ AZ1 Reserved Stop",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] },
            {
              "Fn::FindInMap": [
                "ReservedStop4thOctet",
                { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Ref": "DmzAz2Cidr" } ] } ] },
                { "Fn::Select": [ "0", { "Fn::Split": [ "/", { "Fn::Select": [ "3", { "Fn::Split": [ ".", { "Ref": "DmzAz2Cidr" } ] } ] } ] } ] }
              ]
            }
          ]
        ]
      }
    },
    "BoshLitePrivateIp": {
      "Description": "Bosh Private IP",
      "Value": {
	"Fn::Join": [
          ".", [
            { "Fn::Select": [ "0", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "1", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            { "Fn::Select": [ "2", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] },
            {
              "Fn::FindInMap": [
                "BoshPrivateIp4thOctet",
                { "Fn::Select": [ "1", { "Fn::Split": [ "/", { "Ref": "DmzAz1Cidr" } ] } ] },
                { "Fn::Select": [ "0", { "Fn::Split": [ "/", { "Fn::Select": [ "3", { "Fn::Split": [ ".", { "Ref": "DmzAz1Cidr" } ] } ] } ] } ] }
              ]
            }
          ]
        ]
      },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-BoshLitePrivateIp" } }
    },

    "DmzRouteTable": {
      "Description": "DMZ Route Table",
      "Value": { "Ref": "DmzRouteTable" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DmzRouteTable" } }
    },
    "DmzSecurityGroup": {
      "Description": "DMZ Security Groups",
      "Value": { "Ref": "DmzSecurityGroup" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-DmzSecurityGroup" } }
    },
    "LbSecurityGroup": {
      "Description": "LB Security Groups",
      "Value": { "Ref": "LbSecurityGroup" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-LbSecurityGroup" } }
    },
    "SshElbSecurityGroup": {
      "Description": "SSH ELB Security Groups",
      "Value": {
        "Fn::If": [
          "DeployElb",
          { "Ref": "SshElbSecurityGroup" },
          ""
        ]
      },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-SshElbSecurityGroup" } }
    }
  },

  "Mappings": {
    "Route4thOctet": {
      "24": { "0": "1" },
      "25": { "128": "129", "0": "1" },
      "26": { "192": "193", "128": "129", "64": "65", "0": "1" },
      "27": { "224": "225", "192": "193", "160": "161", "128": "129", "96": "97", "64": "65", "32": "33", "0": "1" }
    },
    "BoshPrivateIp4thOctet": {
      "24": { "0": "6" },
      "25": { "128": "134", "0": "6" },
      "26": { "192": "198", "128": "134", "64": "70", "0": "6" },
      "27": { "224": "230", "192": "198", "160": "166", "128": "134", "96": "102", "64": "70", "32": "38", "0": "6" }
    },
    "ReservedStart4thOctet": {
      "24": { "0": "10" },
      "25": { "128": "138", "0": "10" },
      "26": { "192": "202", "128": "138", "64": "74", "0": "10" },
      "27": { "224": "234", "192": "202", "160": "170", "128": "138", "96": "106", "64": "74", "32": "42", "0": "10" }
    },
    "ReservedStop4thOctet": {
      "24": { "0": "254" },
      "25": { "128": "254", "0": "127" },
      "26": { "192": "196", "128": "132", "64": "68", "0": "4" },
      "27": { "224": "228", "192": "196", "160": "164", "128": "132", "96": "100", "64": "68", "32": "36", "0": "4" }
    }
  },

  "Conditions": {
    "DeployElb": { "Fn::Equals": [ { "Ref": "DeployElb" }, "true" ] },
    "SingleAz": { "Fn::Equals": [ { "Ref": "MultiAz" }, "false" ] },
    "MultiAz": { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
    "MultiAzOrElb": {
      "Fn::Or": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "DeployElb" }, "true" ] }
      ]
    }
  },

  "Resources": {
    "StackProtection": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "StackArn": { "Ref": "AWS::StackId" },
          "StackProtectionGroup": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-StackProtectionGroup" } },
          "StackDeleteAllowDeny": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-StackDeleteAllowDeny" } },
          "StackUpdateAllowDeny": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-StackUpdateAllowDeny" } }
        },
        "TemplateURL": {
          "Fn::Join": [
            "/", [
	      { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-preamble-TemplatesBucketHttpUrl" } },
              "Templates",
              "Stack-Protection.json"
            ]
          ]
        }
      }
    },
    "DmzAz1Subnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AwsAvailabilityZone1" } },
        "CidrBlock": { "Ref": "DmzAz1Cidr" },
        "MapPublicIpOnLaunch": false,
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DmzAz1Subnet" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "DmzAz2Subnet": {
      "Type": "AWS::EC2::Subnet",
      "Condition": "MultiAzOrElb",
      "Properties": {
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AwsAvailabilityZone2" } },
        "CidrBlock": { "Ref": "DmzAz2Cidr" },
        "MapPublicIpOnLaunch": false,
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DmzAz2Subnet" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "DmzRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DmzRouteTable" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "DmzAz1SubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": { "Ref": "DmzAz1Subnet" },
        "RouteTableId": { "Ref": "DmzRouteTable" }
      }
    },
    "DmzAz2SubnetRouteTableAssociation": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Condition": "MultiAzOrElb",
      "Properties": {
        "SubnetId": { "Ref": "DmzAz2Subnet" },
        "RouteTableId": { "Ref": "DmzRouteTable" }
      }
    },

    "DmzInternetRoute": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-InternetGateway" } },
        "RouteTableId": { "Ref": "DmzRouteTable" }
      }
    },

    "DmzSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "DMZ In Out",
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "SecurityGroupEgress": [
          { "CidrIp": "0.0.0.0/0", "FromPort": "0", "ToPort": "65535", "IpProtocol": "-1" }
        ],
        "SecurityGroupIngress": [
          { "CidrIp": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-VpcCidr" } }, "FromPort": "0", "ToPort": "65535" , "IpProtocol": "-1" }
        ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:DmzSecurityGroup" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "LbSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Load Balancer Security Group",
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "SecurityGroupEgress": [
          { "CidrIp": "0.0.0.0/0", "FromPort": "80", "ToPort": "80", "IpProtocol": "tcp" },
          { "CidrIp": "0.0.0.0/0", "FromPort": "443", "ToPort": "443", "IpProtocol": "tcp" }
        ],
        "SecurityGroupIngress": [
          { "CidrIp": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-VpcCidr" } }, "FromPort": "0", "ToPort": "65535" , "IpProtocol": "-1" }
        ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:LbSecurityGroup" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "SshElbSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Condition": "DeployElb",
      "Properties": {
        "GroupDescription": "SSH Load Balancer Security Group",
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "SecurityGroupEgress": [
          { "CidrIp": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-VpcCidr" } }, "FromPort": "0", "ToPort": "65535" , "IpProtocol": "-1" }
        ],
        "SecurityGroupIngress": [
          { "CidrIp": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-VpcCidr" } }, "FromPort": "0", "ToPort": "65535" , "IpProtocol": "-1" }
        ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:SshElbSecurityGroup" } },
          { "Key": "Deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "DmzNatAz1SecurityGroupIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "GroupId": { "Ref": "DmzSecurityGroup" },
        "CidrIp": {
          "Fn::Join": [
            "", [
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1Ip" } },
              "/32"
            ]
          ]
        },
        "FromPort": "443",
        "ToPort": "443",
        "IpProtocol": "tcp"
      }
    },
    "DmzNatAz2SecurityGroupIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "MultiAz",
      "Properties": {
        "GroupId": { "Ref": "DmzSecurityGroup" },
        "CidrIp": {
          "Fn::Join": [
            "", [
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz2Ip" } },
              "/32"
            ]
          ]
        },
        "FromPort": "443",
        "ToPort": "443",
        "IpProtocol": "tcp"
      }
    },
    "DmzNatAz3SecurityGroupIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "MultiAz",
      "Properties": {
        "GroupId": { "Ref": "DmzSecurityGroup" },
        "CidrIp": {
          "Fn::Join": [
            "", [
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz3Ip" } },
              "/32"
            ]
          ]
        },
        "FromPort": "443",
        "ToPort": "443",
        "IpProtocol": "tcp"
      }
    },

    "LbNatAz1SecurityGroupIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "GroupId": { "Ref": "LbSecurityGroup" },
        "CidrIp": {
          "Fn::Join": [
            "", [
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz1Ip" } },
              "/32"
            ]
          ]
        },
        "FromPort": "443",
        "ToPort": "443",
        "IpProtocol": "tcp"
      }
    },
    "LbNatAz2SecurityGroupIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "MultiAz",
      "Properties": {
        "GroupId": { "Ref": "LbSecurityGroup" },
        "CidrIp": {
          "Fn::Join": [
            "", [
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz2Ip" } },
              "/32"
            ]
          ]
        },
        "FromPort": "443",
        "ToPort": "443",
        "IpProtocol": "tcp"
      }
    },
    "LbNatAz3SecurityGroupIngress": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Condition": "MultiAz",
      "Properties": {
        "GroupId": { "Ref": "LbSecurityGroup" },
        "CidrIp": {
          "Fn::Join": [
            "", [
              { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-NatAz3Ip" } },
              "/32"
            ]
          ]
        },
        "FromPort": "443",
        "ToPort": "443",
        "IpProtocol": "tcp"
      }
    }
  }
}
