{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Bosh AWS User & Groups",

  "Parameters": {
    "DeploymentName": {
      "Type": "String",
      "Description": "Deployment Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]$",
      "ConstraintDescription": "Must be a valid domain label matching /^([A-Za-z0-9]+[A-Za-z0-9-])+[A-Za-z0-9]$/"
    }
  },

  "Outputs": {
    "BlobstoreBackupBucketAccessInstanceProfile": {
      "Description": "Blobstore & Backup S3 Bucket Access Instance Profile",
      "Value": { "Ref": "BlobstoreBackupBucketAccessInstanceProfile" }
    },
    "BlobstoreBucketAccessInstanceProfile": {
      "Description": "Blobstore S3 Bucket Access Instance Profile",
      "Value": { "Ref": "BlobstoreBucketAccessInstanceProfile" }
    },
    "CcBucketAccessInstanceProfile": {
      "Description": "Cloudcontroller S3 Bucket Access Instance Profile",
      "Value": { "Ref": "CcBucketAccessInstanceProfile" }
    },
    "CompileNodesBucketAccessInstanceProfile": {
      "Description": "Compile Nodes S3 Bucket Access Instance Profile",
      "Value": { "Ref": "CompileNodesBucketAccessInstanceProfile" }
    },

    "DirectorInstanceProfile": {
      "Description": "Director Instance Profile",
      "Value": { "Ref": "DirectorInstanceProfile" }
    },
    "SmtpAwsAccessKeyId": {
      "Description": "SMTP Access Key Id",
      "Value": { "Ref": "SmtpAwsAccessKey" }
    },
    "SmtpAwsSecretAccessKey": {
      "Description": "SMTP Broker Access Key",
      "Value": { "Fn::GetAtt": [ "SmtpAwsAccessKey", "SecretAccessKey" ] }
    }
  },

  "Resources": {
    "BlobstoreBackupBucketAccessRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [ "ec2.amazonaws.com" ]
              },
              "Action": [ "sts:AssumeRole" ]
            }
          ]
        },
        "Path": { "Fn::Sub": "/Cloudfoundry/Cloudformation/${DeploymentName}/" },
        "Policies": [
          {
            "PolicyName": "BlobstoreBackupBucketAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ListBucket",
                    "s3:ListBucketVersions",
                    "s3:ListBucketMultipartUploads"
                  ],
                  "Resource": [
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BackupBucketArn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:DeleteObject",
                    "s3:DeleteObjectVersion",
                    "s3:GetObject",
                    "s3:GetObjectVersion",
                    "s3:PutObject",
                    "s3:PutObjectVersion"
                  ],
                  "Resource": [
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BackupBucketArn" } }, "/*" ] ] },
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } }, "/*" ] ] }
                  ]
                }
              ]
            }
          }
        ]
      }
    },

    "BlobstoreBucketAccessRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [ "ec2.amazonaws.com" ]
              },
              "Action": [ "sts:AssumeRole" ]
            }
          ]
        },
        "Path": { "Fn::Sub": "/Cloudfoundry/Cloudformation/${DeploymentName}/" },
        "Policies": [
          {
            "PolicyName": "BlobstoreBucketAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ListBucket",
                    "s3:ListBucketVersions"
                  ],
                  "Resource": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } }
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:GetObjectVersion",
                    "s3:PutObject",
                    "s3:PutObjectVersion"
                  ],
                  "Resource": { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } }, "/*" ] ] }
                }
              ]
            }
          }
        ]
      }
    },
    "CcBucketAccessRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [ "ec2.amazonaws.com" ]
              },
              "Action": [ "sts:AssumeRole" ]
            }
          ]
        },
        "Path": { "Fn::Sub": "/Cloudfoundry/Cloudformation/${DeploymentName}/" },
        "Policies": [
          {
            "PolicyName": "CcBucketAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ListBucket",
                    "s3:ListBucketVersions",
                    "s3:ListBucketMultipartUploads"
                  ],
                  "Resource": [
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BuildpackBucketArn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DropletBucketArn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PackageBucketArn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ResourceBucketArn" } }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:DeleteObject",
                    "s3:DeleteObjectVersion",
                    "s3:GetObject",
                    "s3:GetObjectVersion",
                    "s3:PutObject",
                    "s3:PutObjectVersion"
                  ],
                  "Resource": [
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } }, "/*" ] ] },
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BuildpackBucketArn" } }, "/*" ] ] },
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DropletBucketArn" } }, "/*" ] ] },
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PackageBucketArn" } }, "/*" ] ] },
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ResourceBucketArn" } }, "/*" ] ] }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "CompileNodesBucketAccessRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [ "ec2.amazonaws.com" ]
              },
              "Action": [ "sts:AssumeRole" ]
            } 
          ] 
        },
        "Path": { "Fn::Sub": "/Cloudfoundry/Cloudformation/${DeploymentName}/" },
        "Policies": [
          {
            "PolicyName": "CompileNodesBucketAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ListBucket",
                    "s3:ListBucketVersions",
                    "s3:ListBucketMultipartUploads"
                  ],
                  "Resource": [
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CompiledPackageCacheBucketArn" } }
                  ] 
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:GetObjectVersion",
                    "s3:PutObject",
                    "s3:PutObjectVersion"
                  ],
                  "Resource": [
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } }, "/*" ] ] },
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CompiledPackageCacheBucketArn" } }, "/*" ] ] }
                  ] 
                } 
              ] 
            } 
          } 
        ] 
      } 
    },


    "DirectorRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [ "ec2.amazonaws.com" ]
              },
              "Action": [ "sts:AssumeRole" ]
            }
          ]
        },
        "Path": { "Fn::Sub": "/Cloudfoundry/Cloudformation/${DeploymentName}/" },
        "Policies": [
          {
            "PolicyName": { "Fn::Sub": "${DeploymentName}-DirectorPolicies" },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "ec2:*"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "cloudwatch:PutMetricData"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "elasticloadbalancing:*"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ApplicationElb" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ApplicationElbTargetGroup80Arn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-ApplicationElbTargetGroup443Arn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CfSshElb" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CfSshElbTargetGroup2222Arn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorElb" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup22Arn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup6868Arn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorElbTargetGroup25555Arn" } }
                  ]
                },
                {
                  "Action": [
                    "elasticloadbalancing:DescribeInstanceHealth",
                    "elasticloadbalancing:DescribeLoadBalancerAttributes",
                    "elasticloadbalancing:DescribeLoadBalancerPolicyTypes",
                    "elasticloadbalancing:DescribeLoadBalancers",
                    "elasticloadbalancing:DescribeLoadBalancerPolicies",
                    "elasticloadbalancing:DescribeTargetGroups",
                    "elasticloadbalancing:DescribeTags"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "events:*"
                  ],
                  "Effect": "Allow",
                  "Resource": { "Fn::Sub": "arn:aws:events:*:*:*" }
                },
                {
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents",
                    "logs:DescribeLogStreams"
                  ],
                  "Effect": "Allow",
                  "Resource": { "Fn::Sub": "arn:aws:logs:*:*:*" }
                },
                {
                  "Action": [
                    "iam:GetUser"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "iam:PassRole"
                  ],
                  "Effect": "Allow",
                  "Resource": [
                    { "Ref": "BlobstoreBackupBucketAccessRole" },
                    { "Ref": "BlobstoreBucketAccessRole" },
                    { "Ref": "CcBucketAccessRole" },
                    { "Ref": "CompileNodesBucketAccessRole" }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:ListBucket",
                    "s3:ListBucketVersions",
                    "s3:ListBucketMultipartUploads"
                  ],
                  "Resource": [
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CompiledPackageCacheBucketArn" } },
                    { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorBackupBucketArn" } }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:DeleteObject",
                    "s3:DeleteObjectVersion",
                    "s3:GetObject",
                    "s3:GetObjectVersion",
                    "s3:PutObject",
                    "s3:PutObjectVersion"
                  ],
                  "Resource": [
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-BlobstoreBucketArn" } }, "/*" ] ] },
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CompiledPackageCacheBucketArn" } }, "/*" ] ] },
                    { "Fn::Join": [ "", [ { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DirectorBackupBucketArn" } }, "/*" ] ] }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    
    "SmtpAwsUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "Path": { "Fn::Sub": "/Cloudfoundry/Cloudformation/${DeploymentName}/" },
        "Policies": [
          {
            "PolicyName": { "Fn::Sub": "${DeploymentName}-CfSmtpPolicy" },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "ses:SendRawEmail"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "iam:GetUser"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },

    "BlobstoreBucketAccessInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [
          { "Ref": "BlobstoreBucketAccessRole" }
        ] 
      } 
    },
    "BlobstoreBackupBucketAccessInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [
          { "Ref": "BlobstoreBackupBucketAccessRole" }
        ] 
      } 
    },

    "CcBucketAccessInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [
          { "Ref": "CcBucketAccessRole" }
        ] 
      } 
    },
    "CompileNodesBucketAccessInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [
          { "Ref": "CompileNodesBucketAccessRole" }
        ] 
      } 
    },

    "DirectorInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [
          { "Ref": "DirectorRole" }
        ]
      }
    },

    "SmtpAwsAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Properties": {
        "UserName": { "Ref": "SmtpAwsUser" }
      }
    }
  }
}
