{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Versioned & Replicated S3 Backup Bucket: Destination Bucket and Role - to be added to destination region",

  "Parameters": {
    "DestinationBucketExpirationInDays": {
      "Type": "Number",
      "Default": "180",
      "MinValue": "1",
      "Description": "Destination Bucket Expiration in Days"
    }
  },

  "Outputs": {
    "DestinationBucket": {
      "Description": "Destination Bucket",
      "Value": { "Ref": "DestinationBucket" }
    },
    "DestinationBucketArn": {
      "Description": "Destination Bucket ARN",
      "Value": { "Fn::GetAtt": [ "DestinationBucket", "Arn" ] }
    },
    "DestinationRole": {
      "Description": "Destination Role",
      "Value": { "Fn::GetAtt": [ "DestinationRole", "Arn" ] }
    }
  },

  "Resources": {
    "DestinationRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [ "ec2.amazonaws.com" ]
              },
              "Action": [ "sts:AssumeRole" ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "DestinationRoleAccess",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:GetObject",
                    "s3:GetObjectVersion",
                    "s3:PutObject"
                  ],
                  "Resource": { "Fn::Sub": "arn:aws:s3:::${DestinationBucket}/*" }
                }
              ]
            }
          }
        ]
      }
    },
    "DestinationBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "LifecycleConfiguration": {
          "Rules": [
            {
              "ExpirationInDays": { "Ref": "DestinationBucketExpirationInDays" },
              "Status": "Enabled"
            }
          ]
        },
        "VersioningConfiguration": { "Status": "Enabled" }
      }
    }
  }
}
