{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Application & CF RDS Instances",

  "Parameters": {
    "DeploymentName": {
      "Type": "String",
      "Description": "Deployment Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]$",
      "ConstraintDescription": "Must be a valid domain label matching /^([A-Za-z0-9]+[A-Za-z0-9-])+[A-Za-z0-9]$/"
    },
    "RdsAz1Cidr": {
      "Type": "String",
      "Default": "10.0.60.0/24",
      "Description": "RDS AZ1 CIDR",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
      "ConstraintDescription": "Valid CIDR"
    },
    "RdsAz2Cidr": {
      "Type": "String",
      "Default": "10.0.61.0/24",
      "Description": "RDS AZ2 CIDR",
      "AllowedPattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$",
      "ConstraintDescription": "Valid CIDR"
    },
    "DeployAppsRdsInstance": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy Apps RDS Instance",
      "AllowedValues": [ "true", "false" ]
    },
    "DeployCfRdsInstance": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy Cf RDS Instance",
      "AllowedValues": [ "true", "false" ]
    },
    "AppsRdsInstancePreferredBackupWindow": {
      "Type": "String",
      "Default": "01:00-04:00",
      "Description": "RDS Preferred backup window",
      "AllowedPattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]-([0-1][0-9]|2[0-3]):[0-5][0-9]$",
      "ConstraintDescription": "hh24:mi-hh24:mi, eg 23:59-01:24"
    },
    "AppsRdsInstancePreferredMaintenanceWindow": {
      "Type": "String",
      "Default": "Mon:04:00-Mon:06:00",
      "Description": "Cloudfoundry RDS Preferred maintenance window",
      "AllowedPattern": "^(Mon|Tue|Wed|Thu|Fri|Sat|Sun):([0-1][0-9]|2[0-3]):[0-5][0-9]-(Mon|Tue|Wed|Thu|Fri|Sat|Sun):([0-1][0-9]|2[0-3]):[0-5][0-9]$",
      "ConstraintDescription": "ddd:hh24:mi-hh24:mi, eg Mon:23:59-Tue:01:24"
    },
    "AppsRdsInstanceBackupRetentionPeriod": {
      "Type": "Number",
      "Description": "RDS Apps Instance Backup Retention Period",
      "Default": "28",
      "MinValue": "5",
      "MaxValue": "30"
    },
    "AppsRdsInstanceEngine": {
      "Type": "String",
      "Default": "postgres",
      "Description": "Apps RDS Engine",
      "AllowedValues": [
        "postgres"
      ]
    },
    "AppsRdsInstanceSnapshotIdentifier": {
      "Type": "String",
      "Default": "",
      "Description": "Apps RDS snapshot identifier - for restores",
      "AllowedPattern": "^[a-z0-9:.-]*$",
      "ConstraintDescription": "AWS RDS snapshot identifier, or empty to create a new database"
    },
    "AppsRdsInstanceSize": {
      "Type": "String",
      "Default": "db.t2.medium",
      "Description": "Apps RDS Size (instance size affects max_connections)",
      "AllowedValues": [
        "db.t2.micro",
        "db.t2.small",
        "db.t2.medium",
        "db.t2.large",
        "db.m4.large",
        "db.m4.xlarge"
      ]
    },
    "AppsRdsInstanceStorageSize": {
      "Type": "Number",
      "Description": "RDS Apps Instance Storage Size",
      "Default": "25",
      "MinValue": "5",
      "MaxValue": "6144"
    },
    "AppsRdsInstanceMaxConnections": {
      "Type": "Number",
      "Description": "RDS Apps Instance Max Connections",
      "Default": "100",
      "MinValue": "5",
      "MaxValue": "999"
    },
    "AppsRdsInstanceUsername": {
      "Type": "String",
      "Default": "postgres",
      "Description": "Apps RDS user",
      "MinLength": "1",
      "MaxLength": "63",
      "AllowedPattern": "^[A-Za-z][A-Za-z0-9]+$",
      "ConstraintDescription": "Alphanumeric characters only and must start with a letter"
    },
    "AppsRdsInstancePassword": {
      "Type": "String",
      "Default": "password",
      "Description": "Apps RDS password",
      "MinLength": "1",
      "MaxLength": "63",
      "AllowedPattern": "^[^\"@]+$",
      "ConstraintDescription": "Can be any printable ASCII character except \"/\", \"\"\", or \"@\""
    },
    "CfRdsInstancePreferredBackupWindow": {
      "Type": "String",
      "Default": "01:00-04:00",
      "Description": "RDS Preferred backup window",
      "AllowedPattern": "^([0-1][0-9]|2[0-3]):[0-5][0-9]-([0-1][0-9]|2[0-3]):[0-5][0-9]$",
      "ConstraintDescription": "hh24:mi-hh24:mi, eg 23:59-01:24"
    },
    "CfRdsInstancePreferredMaintenanceWindow": {
      "Type": "String",
      "Default": "Mon:04:00-Mon:06:00",
      "Description": "Cloudfoundry RDS Preferred maintenance window",
      "AllowedPattern": "^(Mon|Tue|Wed|Thu|Fri|Sat|Sun):([0-1][0-9]|2[0-3]):[0-5][0-9]-(Mon|Tue|Wed|Thu|Fri|Sat|Sun):([0-1][0-9]|2[0-3]):[0-5][0-9]$",
      "ConstraintDescription": "ddd:hh24:mi-hh24:mi, eg Mon:23:59-Tue:01:24"
    },
    "CfRdsInstanceBackupRetentionPeriod": {
      "Type": "Number",
      "Description": "RDS CF Instance Backup Retention Period",
      "Default": "28",
      "MinValue": "5",
      "MaxValue": "30"
    },
    "CfRdsInstanceEngine": {
      "Type": "String",
      "Default": "postgres",
      "Description": "Cloudfoundry RDS Engine",
      "AllowedValues": [
        "postgres"
      ]
    },
    "CfRdsInstanceSnapshotIdentifier": {
      "Type": "String",
      "Default": "",
      "Description": "Cloudfoundry RDS snapshot identifier - for restores",
      "AllowedPattern": "^[a-z0-9:.-]*$",
      "ConstraintDescription": "AWS RDS snapshot identifier, or empty to create a new database"
    },
    "CfRdsInstanceSize": {
      "Type": "String",
      "Default": "db.t2.medium",
      "Description": "Cloudfoundry RDS Size (instance size affects max_connections)",
      "AllowedValues": [
        "db.t2.micro",
        "db.t2.small",
        "db.t2.medium",
        "db.t2.large",
        "db.m4.large",
        "db.m4.xlarge"
      ]
    },
    "CfRdsInstanceMaxConnections": {
      "Type": "Number",
      "Description": "RDS CF Instance Max Connections",
      "Default": "100",
      "MinValue": "5",
      "MaxValue": "999"
    },
    "CfRdsInstanceStorageSize": {
      "Type": "Number",
      "Default": "25",
      "Description": "RDS CF Instance Storage Size",
      "MinValue": "5",
      "MaxValue": "6144"
    },
    "CfRdsInstanceUsername": {
      "Type": "String",
      "Default": "postgres",
      "Description": "Cloudfoundry RDS user",
      "MinLength": "1",
      "MaxLength": "63",
      "AllowedPattern": "^[A-Za-z][A-Za-z0-9]+$",
      "ConstraintDescription": "Alphanumeric characters only and must start with a letter"
    },
    "CfRdsInstancePassword": {
      "Type": "String",
      "Default": "password",
      "Description": "Cloudfoundry RDS password",
      "MinLength": "1",
      "MaxLength": "63",
      "AllowedPattern": "^[^\"@]+$",
      "ConstraintDescription": "Can be any printable ASCII character except \"/\", \"\"\", or \"@\""
    },
    "MultiAz": {
      "Type": "String",
      "Default": "true",
      "Description": "Deploy multiple AZs",
      "AllowedValues": [ "true", "false" ]
    }
  },

  "Outputs": {
    "RdsAz1Cidr": {
      "Description": "RDS AZ1 CIDR",
      "Condition": "CreateRdsInfrastructure",
      "Value": { "Ref": "RdsAz1Cidr" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-RdsAz1Cidr" } }
    },
    "RdsAz2Cidr": {
      "Description": "RDS AZ2 CIDR",
      "Condition": "CreateRdsInfrastructure",
      "Value": { "Ref": "RdsAz2Cidr" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-RdsAz2Cidr" } }
    },

    "RequiredNonCfRdsPostgresInstances": {
      "Description": "Non-RDS PostgreSQL CF Instances",
      "Value": {
        "Fn::If": [
          "DeployCfRdsInstance",
          "0",
          "1"
        ]
      }
    },
    "ConfigureAppsRdsPostgresInstance": {
      "Description": "Configuration of RDS Apps PostgreSQL Instance (controls Bosh manifest errand to configure Apps PostgreSQL instance",
      "Value": {
        "Fn::If": [
          "DeployAppsRdsInstance",
          "1",
          "0"
        ]
      }
    },
    "ConfigureCfRdsPostgresInstance": {
      "Description": "Configuration of RDS CF PostgreSQL Instance (controls Bosh manifest errand to configure CF PostgreSQL instance)",
      "Value": {
        "Fn::If": [
          "DeployCfRdsInstance",
          "1",
          "0"
        ]
      }
    },
    "DeployAppsRdsInstance": {
      "Description": "Deploy Apps RDS Database Instance",
      "Value": { "Ref": "DeployAppsRdsInstance" }
    },
    "DeployCfRdsInstance": {
      "Description": "Deploy CF RDS Database Instance",
      "Value": { "Ref": "DeployCfRdsInstance" }
    },
    "RdsSubnetGroup": {
      "Description": "RDS Database Subnet Group",
      "Condition": "CreateRdsInfrastructure",
      "Value": { "Ref": "RdsSubnetGroup" }
    },
    "RdsAz1Subnet": {
      "Description": "RDS AZ1 Subnet",
      "Condition": "",
      "Value": { "Ref": "RdsAz1Subnet" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-RdsAz1Subnet" } }
    },
    "RdsAz2Subnet": {
      "Description": "RDS AZ2 Subnet",
      "Condition": "",
      "Value": { "Ref": "RdsAz2Subnet" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-RdsAz2Subnet" } }
    },
    "AppsRdsInstanceAddress": {
      "Description": "Applications RDS Access Address",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Fn::GetAtt": [ "AppsRdsInstance", "Endpoint.Address" ] }
    },
    "AppsRdsInstanceDns": {
      "Description": "RDS Apps Instance DNS Name",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Fn::Join": [ ".", [ "app-rds", { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } } ] ] }
    },
    "AppsRdsInstancePort": {
      "Description": "Applications RDS Port",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Fn::GetAtt": [ "AppsRdsInstance", "Endpoint.Port" ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-AppsRdsInstancePort" } }
    },
    "AppsRdsInstanceUsername": {
      "Description": "Applications RDS Username",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Ref": "AppsRdsInstanceUsername" }
    },
    "AppsRdsInstancePassword": {
      "Description": "Applications RDS Password",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Ref": "AppsRdsInstancePassword" }
    },
    "AppsRdsSecurityGroup": {
      "Description": "Applicationis RDS Password",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Ref": "AppsRdsSecurityGroup" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-AppsRdsSecurityGroup" } }
    },
    "CfRdsInstanceAddress": {
      "Description": "Cloudfoundry RDS Access Address",
      "Condition": "DeployCfRdsInstance",
      "Value": { "Fn::GetAtt": [ "CfRdsInstance", "Endpoint.Address" ] }
    },
    "CfRdsInstanceDns": {
      "Description": "RDS CF Instance DNS Name",
      "Condition": "DeployCfRdsInstance",
      "Value": { "Fn::Join": [ ".", [ "cf-rds", { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-DomainName" } } ] ] }
    },
    "CfRdsInstancePort": {
      "Description": "Cloudfoundry RDS Port",
      "Condition": "DeployCfRdsInstance",
      "Value": { "Fn::GetAtt": [ "CfRdsInstance", "Endpoint.Port" ] },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-CfRdsInstancePort" } }
    },
    "CfRdsInstanceUsername": {
      "Description": "Cloudfoundry RDS Username",
      "Condition": "DeployCfRdsInstance",
      "Value": { "Ref": "AppsRdsInstanceUsername" }
    },
    "CfRdsInstancePassword": {
      "Description": "Cloudfoundry RDS Password",
      "Condition": "DeployCfRdsInstance",
      "Value": { "Ref": "CfRdsInstancePassword" }
    },
    "CfRdsSecurityGroup": {
      "Description": "Cloudfoundry RDS Security Group",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Ref": "CfRdsSecurityGroup" },
      "Export": { "Name": { "Fn::Sub": "${DeploymentName}-CfRdsSecurityGroup" } }
    },
    "RdsBrokerAccessKeyId": {
      "Description": "RDS Broker Access Key Id",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Ref": "RdsBrokerAccessKey" }
    },
    "RdsBrokerSecretAccessKey": {
      "Description": "RDS Broker Access Key",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Fn::GetAtt": [ "RdsBrokerAccessKey", "SecretAccessKey" ] }
    },
    "RdsBrokerUserName": {
      "Description": "RDS Broker User Name",
      "Condition": "DeployAppsRdsInstance",
      "Value": { "Ref": "RdsBrokerUser" }
    }
  },

  "Conditions": {
    "CreateRdsInfrastructure": {
      "Fn::Or": [
        { "Fn::Equals": [ { "Ref": "DeployAppsRdsInstance" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "DeployCfRdsInstance" }, "true" ] }
      ]
    },
    "DeployAppsRdsInstance": { "Fn::Equals": [ { "Ref": "DeployAppsRdsInstance" }, "true" ] },
    "DeployCfRdsInstance": { "Fn::Equals": [ { "Ref": "DeployCfRdsInstance" }, "true" ] },
    "MultiAz": { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
    "MultiAzAndDeployAppsRdsInstance": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "DeployAppsRdsInstance" }, "true" ] }
      ]
    },
    "MultiAzAndDeployCfRdsInstance": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "DeployCfRdsInstance" }, "true" ] }
      ]
    },

    "SingleAz": { "Fn::Equals": [ { "Ref": "MultiAz" }, "false" ] },
    "SingleAzAndDeployAppsRdsInstance": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "DeployAppsRdsInstance" }, "true" ] }
      ]
    },
    "SingleAzAndDeployCfRdsInstance": {
      "Fn::And": [
        { "Fn::Equals": [ { "Ref": "MultiAz" }, "true" ] },
        { "Fn::Equals": [ { "Ref": "DeployCfRdsInstance" }, "true" ] }
      ]
    }
  },

  "Resources": {
    "RdsAz1Subnet": {
      "Type": "AWS::EC2::Subnet",
      "Condition": "CreateRdsInfrastructure",
      "Properties": {
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AwsAvailabilityZone1" } },
        "CidrBlock": { "Ref": "RdsAz1Cidr" },
        "MapPublicIpOnLaunch": false,
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:RdsAz1Subnet" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "RdsAz2Subnet": {
      "Type": "AWS::EC2::Subnet",
      "Condition": "CreateRdsInfrastructure",
      "Properties": {
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AwsAvailabilityZone2" } },
        "CidrBlock": { "Ref": "RdsAz2Cidr" },
        "MapPublicIpOnLaunch": false,
        "VpcId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-CloudFoundryVpc" } },
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:RdsAz2Subnet" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "RdsSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Condition": "CreateRdsInfrastructure",
      "Properties": {
        "DBSubnetGroupDescription": "RDS Subnet Group",
        "SubnetIds": [
          { "Ref": "RdsAz1Subnet" },
          { "Ref": "RdsAz2Subnet" }
        ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:RdsSubnetGroup" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "AppsRdsInstance": {
      "Type": "AWS::RDS::DBInstance",
      "Condition": "SingleAzAndDeployAppsRdsInstance",
      "Properties": {
        "DBInstanceIdentifier": { "Fn::Sub": "${DeploymentName}-ApplicationDB" },
        "DBInstanceClass": { "Ref": "AppsRdsInstanceSize" },
        "AllocatedStorage": { "Ref": "AppsRdsInstanceStorageSize" },
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AwsAvailabilityZone1" } },
        "BackupRetentionPeriod": { "Ref": "AppsRdsInstanceBackupRetentionPeriod" },
        "CopyTagsToSnapshot": "true",
        "Engine": { "Ref": "AppsRdsInstanceEngine" },
        "DBSubnetGroupName": { "Ref": "RdsSubnetGroup" },
        "DBSnapshotIdentifier": { "Ref": "AppsRdsInstanceSnapshotIdentifier" },
        "MasterUsername": { "Ref": "AppsRdsInstanceUsername" },
        "MasterUserPassword": { "Ref": "AppsRdsInstancePassword" },
        "PreferredBackupWindow": { "Ref": "AppsRdsInstancePreferredBackupWindow" },
        "PreferredMaintenanceWindow": { "Ref": "AppsRdsInstancePreferredMaintenanceWindow" },
        "VPCSecurityGroups": [ { "Ref": "AppsRdsSecurityGroup" } ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:AppsRdsInstance" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "AppsRdsInstance": {
      "Type": "AWS::RDS::DBInstance",
      "Condition": "MultiAzAndDeployAppsRdsInstance",
      "Properties": {
        "DBInstanceIdentifier": { "Fn::Sub": "${DeploymentName}-ApplicationDB" },
        "DBInstanceClass": { "Ref": "AppsRdsInstanceSize" },
        "AllocatedStorage": { "Ref": "AppsRdsInstanceStorageSize" },
        "BackupRetentionPeriod": { "Ref": "AppsRdsInstanceBackupRetentionPeriod" },
        "CopyTagsToSnapshot": "true",
        "DBSubnetGroupName": { "Ref": "RdsSubnetGroup" },
        "DBSnapshotIdentifier": { "Ref": "AppsRdsInstanceSnapshotIdentifier" },
        "Engine": { "Ref": "AppsRdsInstanceEngine" },
        "MasterUsername": { "Ref": "AppsRdsInstanceUsername" },
        "MasterUserPassword": { "Ref": "AppsRdsInstancePassword" },
        "MultiAZ": "true",
        "PreferredBackupWindow": { "Ref": "AppsRdsInstancePreferredBackupWindow" },
        "PreferredMaintenanceWindow": { "Ref": "AppsRdsInstancePreferredMaintenanceWindow" },
        "VPCSecurityGroups": [ { "Ref": "AppsRdsSecurityGroup" } ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:AppsRdsInstance" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "CfRdsInstance": {
      "Type": "AWS::RDS::DBInstance",
      "Condition": "SingleAzAndDeployCfRdsInstance",
      "Properties": {
        "DBInstanceIdentifier": { "Fn::Sub": "${DeploymentName}-CloudfoundryDB" },
        "DBInstanceClass": { "Ref": "CfRdsInstanceSize" },
        "AllocatedStorage": { "Ref": "CfRdsInstanceStorageSize" },
        "AvailabilityZone": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-AwsAvailabilityZone1" } },
        "BackupRetentionPeriod": { "Ref": "CfRdsInstanceBackupRetentionPeriod" },
        "CopyTagsToSnapshot": "true",
        "Engine": { "Ref": "CfRdsInstanceEngine" },
        "DBSubnetGroupName": { "Ref": "RdsSubnetGroup" },
        "DBSnapshotIdentifier": { "Ref": "CfRdsInstanceSnapshotIdentifier" },
        "MasterUsername": { "Ref": "CfRdsInstanceUsername" },
        "MasterUserPassword": { "Ref": "CfRdsInstancePassword" },
        "PreferredBackupWindow": { "Ref": "CfRdsPreferredBackupWindow" },
        "PreferredMaintenanceWindow": { "Ref": "CfRdsInstancePreferredMaintenanceWindow" },
        "VPCSecurityGroups": [ { "Ref": "CfRdsSecurityGroup" } ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:CfRdsInstance" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },
    "CfRdsInstance": {
      "Type": "AWS::RDS::DBInstance",
      "Condition": "MultiAzAndDeployCfRdsInstance",
      "Properties": {
        "DBInstanceIdentifier": { "Fn::Sub": "${DeploymentName}-CloudfoundryDB" },
        "DBInstanceClass": { "Ref": "CfRdsInstanceSize" },
        "AllocatedStorage": { "Ref": "CfRdsInstanceStorageSize" },
        "BackupRetentionPeriod": { "Ref": "CfRdsInstanceBackupRetentionPeriod" },
        "CopyTagsToSnapshot": "true",
        "DBSubnetGroupName": { "Ref": "RdsSubnetGroup" },
        "DBSnapshotIdentifier": { "Ref": "CfRdsInstanceSnapshotIdentifier" },
        "Engine": { "Ref": "CfRdsInstanceEngine" },
        "MasterUsername": { "Ref": "CfRdsInstanceUsername" },
        "MasterUserPassword": { "Ref": "CfRdsInstancePassword" },
        "MultiAZ": "true",
        "PreferredBackupWindow": { "Ref": "CfRdsInstancePreferredBackupWindow" },
        "PreferredMaintenanceWindow": { "Ref": "CfRdsInstancePreferredMaintenanceWindow" },
        "VPCSecurityGroups": [ { "Ref": "CfRdsSecurityGroup" } ],
        "Tags": [
          { "Key": "Name", "Value": { "Fn::Sub": "${DeploymentName}:CfRdsInstance" } },
          { "Key": "deployment", "Value": { "Ref": "DeploymentName" } }
        ]
      }
    },

    "RdsBrokerUser": {
      "Type": "AWS::IAM::User",
      "Condition": "DeployAppsRdsInstance",
      "Properties": {
        "Path": { "Fn::Sub": "/Cloudfoundry/Cloudformation/${DeploymentName}/" },
        "Policies": [
          {
            "PolicyName": { "Fn::Sub": "${DeploymentName}-CfRdsPolicy" },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "rds:DescribeDBInstances",
                    "rds:CreateDBInstance",
                    "rds:ModifyDBInstance",
                    "rds:DeleteDBInstance",
                    "rds:AddTagsToResource"
                  ],
                  "Effect": "Allow",
                  "Resource": { "Fn::Sub": "arn:aws:rds:${AWS::Region}:${AWS::AccountId}:db:*" }
                },
                {
                  "Action": [
                    "iam:GetUser"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },

    "RdsBrokerAccessKey": {
      "Type": "AWS::IAM::AccessKey",
      "Condition": "DeployAppsRdsInstance",
      "Properties": {
        "UserName": { "Ref": "RdsBrokerUser" }
      }
    },

    "AppsRdsInstanceDns": {
      "Type": "AWS::Route53::RecordSet",
      "Condition": "DeployAppsRdsInstance",
      "Properties": {
