{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Egress Security Rules",

  "Parameters": {
    "DeploymentName": {
      "Type": "String",
      "Description": "Deployment Name",
      "MinLength": "1",
      "MaxLength": "16",
      "AllowedPattern": "^([A-Za-z0-9]+[A-Za-z0-9-]?)+[A-Za-z0-9]$",
      "ConstraintDescription": "Must be a valid domain label matching /^([A-Za-z0-9]+[A-Za-z0-9-])+[A-Za-z0-9]$/"
    },
    "ExternalRdsAz1Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External RDS Database AZ1 CIDR",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalRdsAz2Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External RDS Database AZ2 CIDR",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalRdsAz3Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External RDS Database AZ3 CIDR",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalRabbitmqAz1Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External RabbitMQ CIDR AZ1",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalRabbitmqAz2Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External RabbitMQ CIDR AZ2",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalRabbitmqAz3Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External RabbitMQ CIDR AZ3",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalSyslogAz1Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External Syslog CIDR AZ1",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalSyslogAz2Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External Syslog CIDR AZ2",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalSyslogAz3Cidr": {
      "Type": "String",
      "Default": "",
      "Description": "External Syslog CIDR AZ3",
      "AllowedPattern": "^(([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2})?$",
      "ConstraintDescription": "Valid CIDR"
    },
    "ExternalRdsPort": {
      "Type": "Number",
      "Default": "5432",
      "MinValue": "1024",
      "MaxValue": "65535",
      "Description": "External RDS Port"
    },
    "ExternalRabbitmqPort1": {
      "Type": "Number",
      "Default": "5672",
      "MinValue": "1024",
      "MaxValue": "65535",
      "Description": "External RabbitMQ Port 1"
    },
    "ExternalRabbitmqPort2": {
      "Type": "Number",
      "Default": "5672",
      "MinValue": "1024",
      "MaxValue": "65535",
      "Description": "External RabbitMQ Port 2"
    },
    "ExternalSyslogPort": {
      "Type": "Number",
      "Default": "514",
      "MinValue": "1",
      "MaxValue": "65535",
      "Description": "External Syslog Port"
    }
  },

  "Conditions": {
    "WhitelistExternalRdsAz1Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRdsAz1Cidr" }, "" ] } ] },
    "WhitelistExternalRdsAz2Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRdsAz2Cidr" }, "" ] } ] },
    "WhitelistExternalRdsAz3Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRdsAz3Cidr" }, "" ] } ] },

    "WhitelistExternalRabbitmqAz1Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqAz1Cidr" }, "" ] } ] },
    "WhitelistExternalRabbitmqAz2Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqAz2Cidr" }, "" ] } ] },
    "WhitelistExternalRabbitmqAz3Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqAz3Cidr" }, "" ] } ] },

    "WhitelistExternalRabbitmqAz1CidrPort2": {
      "Fn::And": [
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqPort1" }, { "Ref": "ExternalRabbitmqPort2" } ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqAz1Cidr" }, "" ] } ] }
      ]
    },
    "WhitelistExternalRabbitmqAz2CidrPort2": {
      "Fn::And": [
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqPort1" }, { "Ref": "ExternalRabbitmqPort2" } ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqAz2Cidr" }, "" ] } ] }
      ]
    },
    "WhitelistExternalRabbitmqAz3CidrPort2": {
      "Fn::And": [
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqPort1" }, { "Ref": "ExternalRabbitmqPort2" } ] } ] },
        { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalRabbitmqAz3Cidr" }, "" ] } ] }
      ]
    },

    "WhitelistExternalSyslogAz1Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalSyslogAz1Cidr" }, "" ] } ] },
    "WhitelistExternalSyslogAz2Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalSyslogAz2Cidr" }, "" ] } ] },
    "WhitelistExternalSyslogAz3Cidr": { "Fn::Not": [ { "Fn::Equals": [ { "Ref": "ExternalSyslogAz3Cidr" }, "" ] } ] }
  },

  "Resources": {
   "PrivateToExternalRdsAz1SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRdsAz1Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRdsAz1Cidr" },
        "Port": { "Ref": "ExternalRdsPort" },
        "IpProtocol": "tcp" 
      } 
    },
   "PrivateToExternalRdsAz2SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRdsAz2Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRdsAz2Cidr" },
        "Port": { "Ref": "ExternalRdsPort" },
        "IpProtocol": "tcp" 
      } 
    },
   "PrivateToExternalRdsAz3SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRdsAz3Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRdsAz3Cidr" },
        "Port": { "Ref": "ExternalRdsPort" },
        "IpProtocol": "tcp" 
      } 
    },
    "PrivateToExternalRabbitmqPort1Az1SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRabbitmqAz1Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRabbitmqAz1Cidr" },
        "Port": { "Ref": "ExternalRabbitmqPort1" },
        "IpProtocol": "tcp" 
      } 
    },
    "PrivateToExternalRabbitmqPort1Az2SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRabbitmqAz2Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRabbitmqAz2Cidr" },
        "Port": { "Ref": "ExternalRabbitmqPort1" },
        "IpProtocol": "tcp" 
      } 
    },
    "PrivateToExternalRabbitmqPort1Az3SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRabbitmqAz3Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRabbitmqAz3Cidr" },
        "Port": { "Ref": "ExternalRabbitmqPort1" },
        "IpProtocol": "tcp" 
      } 
    },

    "PrivateToExternalRabbitmqPort2Az1SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRabbitmqAz1CidrPort2",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRabbitmqAz1Cidr" },
        "Port": { "Ref": "ExternalRabbitmqPort2" },
        "IpProtocol": "tcp" 
      } 
    },
    "PrivateToExternalRabbitmqPort2Az2SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRabbitmqAz2CidrPort2",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRabbitmqAz2Cidr" },
        "Port": { "Ref": "ExternalRabbitmqPort2" },
        "IpProtocol": "tcp" 
      } 
    },
    "PrivateToExternalRabbitmqPort3Az3SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalRabbitmqAz3CidrPort2",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalRabbitmqAz3Cidr" },
        "Port": { "Ref": "ExternalRabbitmqPort2" },
        "IpProtocol": "tcp" 
      } 
    },

    "PrivateToExternalSyslogPortAz1SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalSyslogAz1Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalSyslogAz1Cidr" },
        "Port": { "Ref": "ExternalSyslogPort" },
        "IpProtocol": "tcp" 
      } 
    },
    "PrivateToExternalSyslogPortAz2SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalSyslogAz2Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalSyslogAz2Cidr" },
        "Port": { "Ref": "ExternalSyslogPort" },
        "IpProtocol": "tcp" 
      } 
    },
    "PrivateToExternalSyslogPort3Az3SecurityGroupEgress": {
      "Type": "AWS::EC2::SecurityGroupEgress",
      "Condition": "WhitelistExternalSyslogAz3Cidr",
      "Properties": {
        "GroupId": { "Fn::ImportValue": { "Fn::Sub": "${DeploymentName}-PrivateSecurityGroup" } }, 
        "CidrIp": { "Ref": "ExternalSyslogAz3Cidr" },
        "Port": { "Ref": "ExternalSyslogPort" },
        "IpProtocol": "tcp" 
      } 
    }
  }
}
